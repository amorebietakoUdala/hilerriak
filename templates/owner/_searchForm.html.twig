{% block message %}
	{{ include('common/_messages.html.twig') }}
{% endblock %}

{{ form_start(form) }}
   <div class="row align-items-center" {{ stimulus_controller('owner-search-form')}}>
      <div class="col-lg-2 col-md-2 col-sm-6">
         {{ form_row(form.dni, { 'attr': { 'class' : 'form-control form-control-sm', "data-owner-search-form-target" : "dniInput" } }) }}
      </div>
      <div class="col-lg-4 col-md-2 col-sm-6">
         {{ form_row(form.fullname, { 'attr': { 'class' : 'form-control form-control-sm', "data-owner-search-form-target" : "fullnameInput" } }) }}
      </div>
      <div class="col-lg-auto col-md-2 col-sm-6">
         <button class="btn btn-primary" type="submit">{{ 'btn.search' | trans }}</button>
      </div>
      <div class="col-lg-1 col-md-2 col-sm-6">
         <button type="button" class="btn btn-success" data-action="owner-search-form#clean">{{ button_label|default('btn.clean')|trans }}</button>
      </div>
    </div>
{{ form_end(form) }}
